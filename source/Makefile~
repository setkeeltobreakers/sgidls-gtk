CFLAGS=`pkg-config --cflags gtk+-3.0` -g
LIBFLAGS=`pkg-config --libs gtk+-3.0`

all: sgidls-gtk
	make clean;

sgidls-gtk: main.o parser.o scanner.o strings.o table.o
	gcc $(CFLAGS) -o sgidls-gtk main.o parser.o scanner.o strings.o table.o $(LIBFLAGS)

main.o: main.c
	gcc $(CFLAGS) -o main.o -c main.c $(LIBFLAGS)

parser.o: parser.c
	gcc $(CFLAGS) -o parser.o -c parser.c $(LIBFLAGS)

scanner.o: scanner.c
	gcc $(CFLAGS) -o scanner.o -c scanner.c $(LIBFLAGS)

strings.o: strings.c
	gcc $(CFLAGS) -o strings.o -c strings.c $(LIBFLAGS)

table.o: table.c
	gcc $(CFLAGS) -o table.o -c table.c $(LIBFLAGS)

clean:
	rm -f *.o

remove:
	rm -f *.o; rm -f sgidls-gtk
